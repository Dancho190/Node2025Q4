{
  "compilerOptions": {
    "target": "ES2022",                       
    "module": "NodeNext",                     
    "moduleResolution": "NodeNext",           
    "outDir": "dist",                         
    "rootDir": "src",                         
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                           
    "skipLibCheck": true,                     
    "allowSyntheticDefaultImports": true,     
    "resolveJsonModule": true,                
    "isolatedModules": true,                  
    "noEmitOnError": true                     
  },
   "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}